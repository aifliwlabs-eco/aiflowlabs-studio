{
  "compilerOptions": {
    // Базовые таргеты Next 15
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "jsx": "preserve",
    // Важно для Next/TS
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // Для Next сборки TS-эмит не нужен
    "noEmit": true,
    // Алиасы (исправляет '@/components/Card')
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    // Плагины Next
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
